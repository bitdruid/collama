{
    "name": "collama",
    "displayName": "collama",
    "description": "Use code auto completion provided by a local ollama instance",
    "repository": "https://github.com/bitdruid/collama",
    "publisher": "bitdruid",
    "icon": "media/collama.png",
    "license": "MIT",
    "version": "1.4.1",
    "engines": {
        "vscode": "^1.109.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./dist/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "configuration": [
            {
                "title": "Autocomplete-API",
                "properties": {
                    "collama.apiEndpointCompletion": {
                        "type": "string",
                        "default": "http://127.0.0.1:11434",
                        "description": "API endpoint for auto-completion."
                    },
                    "collama.apiModelCompletion": {
                        "type": "string",
                        "default": "qwen2.5-coder:3b",
                        "description": "Model for autocomplete."
                    },
                    "collama.apiTokenContextLenCompletion": {
                        "type": "number",
                        "default": 4096,
                        "description": "Context window size (tokens) for the completion model."
                    },
                    "collama.apiTokenPredictCompletion": {
                        "type": "number",
                        "default": 400,
                        "description": "Max tokens to generate per completion request."
                    }
                }
            },
            {
                "title": "Instruct-API",
                "properties": {
                    "collama.apiEndpointInstruct": {
                        "type": "string",
                        "default": "http://127.0.0.1:11434",
                        "description": "API endpoint for edit/chat."
                    },
                    "collama.apiModelInstruct": {
                        "type": "string",
                        "default": "gpt-oss:20b",
                        "markdownDescription": "Model for edits.\n\nUse an **instruct** or **base** model."
                    },
                    "collama.apiTokenContextLenInstruct": {
                        "type": "number",
                        "default": 4096,
                        "description": "Context window size (tokens) for the instruct/chat model."
                    },
                    "collama.apiTokenPredictInstruct": {
                        "type": "number",
                        "default": 4096,
                        "description": "Max tokens to generate per instruct/chat request."
                    }
                }
            },
            {
                "title": "General",
                "properties": {
                    "collama.tlsRejectUnauthorized": {
                        "type": "boolean",
                        "default": true,
                        "markdownDescription": "Verify TLS certificates for HTTPS endpoints. **Disable only if you trust the network** (equivalent to `NODE_TLS_REJECT_UNAUTHORIZED=0`)."
                    },
                    "collama.autoComplete": {
                        "type": "boolean",
                        "default": true,
                        "description": "Turn auto-suggestions ON."
                    },
                    "collama.suggestMode": {
                        "type": "string",
                        "default": "inline",
                        "enum": [
                            "inline",
                            "multiblock",
                            "multiline"
                        ],
                        "markdownDescription": "Suggest code-blocks or code-lines."
                    },
                    "collama.suggestDelay": {
                        "type": "number",
                        "default": 1500,
                        "markdownDescription": "Delay (ms) before requesting inline completion. Prevents Ollama from running every time the completion is triggered. (Spam protection)\n\n**Min:** 1000"
                    },
                    "collama.agentic": {
                        "type": "boolean",
                        "default": true,
                        "description": "Use agentic (tool use) mode for chat."
                    },
                    "collama.enableEditTools": {
                        "type": "boolean",
                        "default": true,
                        "description": "Enable edit tools (editFile, createFile, deleteFile, etc.). When disabled, the agent runs in read-only mode."
                    }
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "collama_chat",
                    "title": "collama",
                    "icon": "media/collama.svg"
                }
            ]
        },
        "views": {
            "collama_chat": [
                {
                    "id": "collama_chatview",
                    "name": "Chat",
                    "type": "webview",
                    "icon": "media/collama.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "collama.writeDocstrings",
                "title": "Write Docstring"
            },
            {
                "command": "collama.extractFunctions",
                "title": "Extract Functions"
            },
            {
                "command": "collama.simplifyCode",
                "title": "Simplify Code"
            },
            {
                "command": "collama.fixSyntax",
                "title": "Fix Syntax"
            },
            {
                "command": "collama.editManual",
                "title": "Edit"
            },
            {
                "command": "collama.sendToChat",
                "title": "Send to Chat"
            },
            {
                "command": "collama.requestCommitMessage",
                "title": "collama: Generate Commit Message",
                "icon": "$(sparkle)"
            },
            {
                "command": "collama.setBearerCompletion",
                "title": "collama: Set Bearer Token (Completion)"
            },
            {
                "command": "collama.setBearerInstruct",
                "title": "collama: Set Bearer Token (Instruct)"
            }
        ],
        "submenus": [
            {
                "id": "collama.submenu1",
                "label": "collama"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "submenu": "collama.submenu1",
                    "group": "0_collama",
                    "when": "activeEditor"
                }
            ],
            "collama.submenu1": [
                {
                    "command": "collama.writeDocstrings",
                    "group": "1_actions",
                    "when": "editorHasSelection"
                },
                {
                    "command": "collama.extractFunctions",
                    "group": "1_actions",
                    "when": "editorHasSelection"
                },
                {
                    "command": "collama.simplifyCode",
                    "group": "1_actions",
                    "when": "editorHasSelection"
                },
                {
                    "command": "collama.fixSyntax",
                    "group": "1_actions",
                    "when": "editorHasSelection"
                },
                {
                    "command": "collama.editManual",
                    "group": "2_edit",
                    "when": "editorHasSelection"
                },
                {
                    "command": "collama.sendToChat",
                    "group": "3_send",
                    "when": "activeEditor"
                }
            ],
            "scm/title": [
                {
                    "command": "collama.requestCommitMessage",
                    "group": "navigation",
                    "when": "scmProvider == git"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/markdown-it": "^14.1.2",
        "@types/node": "25.x",
        "@types/vscode": "^1.109.0",
        "esbuild": "^0.27.3",
        "esbuild-plugin-inline-import": "^1.1.0",
        "eslint": "^10.0.1",
        "fastest-levenshtein": "^1.0.16",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.0"
    },
    "dependencies": {
        "@microsoft/tiktokenizer": "^1.0.10",
        "fast-glob": "^3.3.3",
        "highlight.js": "^11.11.1",
        "lit": "^3.3.2",
        "markdown-it": "^14.1.1",
        "micromatch": "^4.0.8",
        "node-fetch": "^3.3.2",
        "ollama": "^0.6.3",
        "openai": "^6.22.0"
    }
}
